.user-login {
  min-height: 100vh;
}
.user-login .close {
    height: 60rpx;
    padding: 20rpx;
}
.user-login .close image {
      width: 60rpx;
      height: 60rpx;
      height: 60rpx !important;
}
.user-login .logo {
    margin: 60rpx auto;
    text-align: center;
}
.user-login .logo image {
      border: 2rpx solid #d7d7d7;
      width: 140rpx;
      height: 140rpx;
      height: 140rpx !important;
}
.user-login .spance {
    height: 2rpx;
    background: #d7d7d7;
}
.user-login .error {
    font-size: 28rpx;
    color: red;
    margin: 10rpx 0 0 50rpx;
}
.user-login .input {
    background: #fff;
}
.user-login .input .name,
    .user-login .input .password {
      display: -webkit-box;
      display: flex;
      display: -webkit-flex;
      -webkit-box-pack: start;
      -webkit-justify-content: flex-start;
              justify-content: flex-start;
      -webkit-box-align: center;
      -webkit-align-items: center;
              align-items: center;
      margin: 0 47rpx;
}
.user-login .input .name {
      border-bottom: 1rpx solid #d7d7d7;
}
.user-login .input .name view:nth-of-type(1) {
        display: inline-block;
        margin-right: 0;
        background-repeat: no-repeat;
        background-image: url("https://passport.weibo.cn/images/weibo/signin/icon_2x.png");
        background-position: 0 -85rpx;
        width: 90rpx;
        height: 80rpx;
        -webkit-transform: scale(0.6);
                transform: scale(0.6);
        position: relative;
        top: 0;
        right: 0;
        bottom: 0;
        left: -10rpx;
}
.user-login .input .password view:nth-of-type(1) {
      display: inline-block;
      margin-right: 0;
      background-repeat: no-repeat;
      background-image: url("https://passport.weibo.cn/images/weibo/signin/icon_2x.png");
      background-position: 0 -166rpx;
      width: 90rpx;
      height: 80rpx;
      -webkit-transform: scale(0.6);
              transform: scale(0.6);
      position: relative;
      top: 0;
      right: 0;
      bottom: 0;
      left: -10rpx;
}
.user-login .login-button {
    width: 660rpx;
    text-align: center;
    margin: 0 auto;
    margin-top: 40rpx;
    border-radius: 8rpx;
    background: #ff8200;
    font-size: 35rpx;
    color: #fff;
    padding: 15rpx 0;
}
.user-login .operate {
    display: -webkit-box;
    display: flex;
    display: -webkit-flex;
    -webkit-box-pack: justify;
    -webkit-justify-content: space-between;
            justify-content: space-between;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    padding: 0 40rpx;
}
.user-login .operate view {
      padding: 10rpx 0;
      font-size: 28rpx;
      color: #8dccf9;
}

