.login {
  padding: 20rpx;
}
.login .close {
    height: 60rpx;
}
.login .title {
    font-size: 60rpx;
    padding: 20rpx;
}
.login .small-title {
    padding-left: 20rpx;
    font-size: 28rpx;
    color: #636363;
}
.login .small-title text:nth-of-type(2) {
      color: #8dccf9;
      margin-left: 10rpx;
}
.login .login-input {
    margin: 130rpx 20rpx 0rpx 20rpx;
    display: -webkit-box;
    display: flex;
    display: -webkit-flex;
    -webkit-box-pack: start;
    -webkit-justify-content: flex-start;
            justify-content: flex-start;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
}
.login .login-input view:nth-of-type(2) {
      position: relative;
      top: 10rpx;
      right: auto;
      bottom: auto;
      left: auto;
}
.login .login-input input {
      font-size: 40rpx;
}
.login .login-input .close {
      width: 30rpx;
      height: 30rpx;
      position: relative;
      top: 10rpx;
      right: 0;
      bottom: 0;
      left: 10rpx;
}
.login .error {
    font-size: 28rpx;
    color: red;
    margin: 10rpx 0 0 20rpx;
}
.login .login-button {
    width: 660rpx;
    text-align: center;
    margin: 0 auto;
    margin-top: 100rpx;
    border-radius: 50rpx;
    background: #8dccf9;
    font-size: 35rpx;
    color: #fff;
    padding: 15rpx 0;
}
.login .no-disabled {
    background: #1b9af4;
}
.login .user-login {
    padding: 10rpx 20rpx;
    font-size: 28rpx;
    color: #8dccf9;
}
.login image {
    width: 60rpx;
    height: 60rpx;
    height: 60rpx !important;
}

